default_platform(:android)

platform :android do
  desc "Distribute production build to Firebase"
  lane :release_to_firebase do
    sh "flutter clean"
    sh "flutter build apk --release --flavor production --target lib/main_production.dart --no-tree-shake-icons"

    # âœ… Array of testers
    testers_list = [
      "aelbaz0189@gmail.com",
      "m9stafa05@gmail.com",
      "mohmmedhosni34@gmail.com",
      "Amrb3556@gmail.com",
      "shimaasoliman821@gmail.com",
      "mahiradwan2@gmail.com",
      "karamwesam289@gmail.com"
    ]

    # ðŸ”¹ Convert array to comma-separated string
    testers_string = testers_list.join(", ")

    firebase_app_distribution(
      app: "1:818314557158:android:d245cd4330120925842d27",
      firebase_cli_token: ENV["FIREBASE_CLI_TOKEN"],
      android_artifact_type: "APK",
      android_artifact_path: "../build/app/outputs/flutter-apk/app-production-release.apk",
      testers: testers_string,
      release_notes: "test this version of the app"
    )
  end
end
